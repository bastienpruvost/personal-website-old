        = t "slider.s1_1"
        %br
        = t "slider.s1_2"
    %li
      %img{src: "/assets/slides/ig2i.png", alt: "ig2i"}
      %p.slide-text.flex-caption
        = t "slider.s2"
    %li
      %img{src: "/assets/slides/rails.png", alt: t("slider.alt3")}
      %p.slide-text.flex-caption
        = t "slider.s3"
    %li
      %img{src: "/assets/slides/scrum.png", alt: t("slider.alt4")}
      %p.slide-text.flex-caption
        = t "slider.s4"
    %li
      %img{src: "/assets/slides/international.png", alt: t("slider.alt5")}
      %p.slide-text.flex-caption
        = t "slider.s5"
    %li
      %img{src: "/assets/slides/collaboration.png", alt: "Collaboration"}
      %p.slide-text.flex-caption
        = t "slider.s6_1"
        %br
        = t "slider.s6_2"



:javascript
  $(window).load(function() {
    $('.flexslider').flexslider({ animation: "fade", slideshowSpeed: 4500, animationSpeed: 1500, pauseOnHover: true});
  });

